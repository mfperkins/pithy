!!!
%html
  %head
    %title Pithy
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons"
    = stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Damion"
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = favicon_link_tag 'pithy_favicon.ico'
  %body
    %main
      = render 'layouts/nav'
      .container
        - flash.each do |key, value|
          - value.split("/").each do |flash_text|
            :javascript
              var toast_colours = {
                "notice": 'green',
                "success": 'green',
                "error": 'orange',
                "alert": 'orange'
              };
              function toast_colour(flashKey) {
                return toast_colours[flashKey];
              };
              $(function(){Materialize.toast("#{flash_text}", 8000, toast_colour('#{key}'));});
        = yield

    = render 'layouts/footer'
    = render 'layouts/google_analytics'
